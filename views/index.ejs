<!-- FORM SECTION -->
<section id="landing-form" class="pt-5 mb-3">
    <div class="container-fluid">
        <div class="row mx-lg-5">
            <div class="col-12 col-lg-9 px-lg-5 border left border-right-0">
                <div class="content-title container-fluid">
                    <h3 class="text-left mt-5 wow fadeInDown" data-wow-duration="1s" data-wow-delay=".5s">tell us what
                        we can do for you</h3>
                    <div class="content-title-underline wow fadeInDown" data-wow-duration="1s" data-wow-delay=".5s">
                    </div>
                    <p class="text-justify wow fadeInDown" data-wow-duration="1s" data-wow-delay=".5s">With a proper
                        productivity system, nothing ever slips through the cracks. Ranging from selling of tickets to
                        event promotion and anyother stuff you can think of; we're here to serve you. Remember to add
                        your email or contact details.</p>
                </div>
                <div class="pt-2 container-fluid mb-5">
                    <form action="/" method="post" class="needs-validation" novalidate>
                        <div class="form-group">

                            <input name="name" type="text" class="form-control" id="name" placeholder="your name"
                                required>
                            <div class="valid-feedback">
                                looks good!
                            </div>
                            <div class="invalid-feedback">
                                we need a name!
                            </div>
                        </div>
                        <div class="form-group">

                            <input name="email" type="email" class="form-control" id="exampleInputEmail1"
                                aria-describedby="emailHelp" placeholder="your email address" required>
                            <div class="valid-feedback">
                                looks good!
                            </div>
                            <div class="invalid-feedback">
                                we need an email address!
                            </div>
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone
                                else.</small>
                        </div>
                        <div class="form-group">

                            <input name="phone" type="text" class="form-control" id="phone"
                                placeholder="your phone number">

                        </div>
                        <div class="form-group">
                            <textarea placeholder="tell us what we can do for you, be explicit please" name="message"
                                class="form-control" id="landing-form" rows="5" required></textarea>
                            <div class="valid-feedback">
                                looks good!
                            </div>
                            <div class="invalid-feedback">
                                please tell us something!
                            </div>
                        </div>
                        <button class="btn btn-lg btn-block btn-blue">send</button>
                    </form>
                </div>
            </div>
            <div class="col-12 col-lg-3 mb-5 mb-lg-0 border border-left-0 d-none d-lg-block">
                <img src="/images/form.png" class="img-fluid" alt="tell us what you want">
            </div>
        </div>
    </div>
</section>

