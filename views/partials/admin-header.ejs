    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <link rel="stylesheet" href="/stylesheets/admin.css">
    <title>event-crm</title>
</head>

<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark p-0 sticky-top">
        <div class="container">
            <a href="/" class="navbar-brand px-2">visit site</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive"
                aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav">
                    <li class="nav-item px-2">
                        <a href="/admin" class="nav-link active">Dashboard</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/admin/blog" class="nav-link active">Posts</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/admin/event" class="nav-link active">Events</a>
                    </li>
                    <li class="nav-item px-2">
                        <a href="/admin/user" class="nav-link active">Users</a>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <% if(currentUser) { %>
                    <li class="nav-item dropdown mr-3">
                        <a href="#" class="px-2 nav-link dropdown-toggle text-white" data-toggle="dropdown">
                            <i class="fa fa-user"></i> Welcome <%=currentUser.username%>
                        </a>
                        <div class="dropdown-menu">
                            <a href="#" class="dropdown-item">
                                <i class="fa fa-user-circle"></i> Profile
                            </a>
                            <a href="#" class="dropdown-item">
                                <i class="fa fa-cog"></i> Settings
                            </a>
                        </div>
                    </li>
                    
                    <li class="nav-item">
                        <form class="nav-link px-1 text-white" action="/logout" method="post">
                            <button><i class="fa fa-user-times"></i> Logout</button>
                        </form>
                    </li>
                    <%}%>
                </ul>
            </div>
        </div>
    </nav>

    <header id="main-header" class="py-2 bg-primary text-white">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h1><i class="fa fa-cog"></i> Dashboard</h1>
                </div>
            </div>
        </div>
    </header>