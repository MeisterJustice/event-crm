<% include ../partials/header %>

<section>
  <div id="carouselExampleIndicators" class="carousel slide mx-lg-5" data-ride="carousel">
    <ol class="carousel-indicators">
      <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img style="height: 40vh; object-fit: cover;" class="img-fluid d-block w-100"
          src="https://cdn.pixabay.com/photo/2015/06/24/15/45/ipad-820272__340.jpg" alt="First slide">
        <div class="carousel-caption d-none d-md-block">
          <p class="text-white">anything can be inside here describing the event or something like that</p>
        </div>
      </div>
      <div class="carousel-item">
        <img style="height: 40vh; object-fit: cover;" class="d-block w-100"
          src="https://cdn.pixabay.com/photo/2018/02/16/10/52/beverage-3157395__340.jpg" alt="Second slide">
        <div class="carousel-caption d-none d-md-block">
          <p class="text-white">anything can be inside here describing the event or something like that</p>
        </div>
      </div>
      <div class="carousel-item">
        <img style="height: 40vh; object-fit: cover;" class="d-block w-100"
          src="https://cdn.pixabay.com/photo/2015/06/24/15/45/ipad-820272__340.jpg" alt="Third slide">
        <div class="carousel-caption d-none d-md-block">
          <p class="text-white">anything can be inside here describing the event or something like that</p>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</section>

<section id="event-cards" class="mt-5 mx-lg-5 mx-2">
  <div class="row">
    <% event.docs.forEach((event) => { %>
    <div class="col-md-6 col-lg-3">
      <a href="/event/<%=event.id%>">
        <div class="card shadow mt-5">
          <p class="m-card-body text-center">happens on <%=event.eventDate%></p>
          <div class="overlay"></div>
          <%if(event.images[0]) {%>
          <img src="<%=event.images[0].url%>" class="card-img-top" alt="...">
          <%}%>
          <div class="card-body">
            <h5 class="card-title"><%=event.title%></h5>
            <p class="card-text"><%- event.description.substring(0, 150) %>.....</p>
          </div>
          <div class="card-footer">
            <small class="text-muted">posted on <%= event.dateCreated.toDateString() %> by <%=event.author.username%></small>
          </div>
        </div>
      </a>
    </div>
    <%})%>
  </div>

  <navbar aria-label="Page barigation example mx-auto">
      <ul class="pagination mt-5">
          <% if(event.page - 1) { %>
          <li class="page-item">
              <a class="page-link" href="/event?page=<%= event.page - 1 %>" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
              </a>
          </li>
          <% } %>
          <% for(let i = 1; i <= event.pages; i++) { %>
          <li class="page-item"><a class="page-link" href="/event?page=<%= i %>"
                  <%= i === event.page ? 'style=color:#000' : '' %>><%= i %></a></li>
          <% } %>
          <% if((event.page + 1) <= event.pages) { %>
          <li class="page-item">
              <a class="page-link" href="/event?page=<%= event.page + 1 %>" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
              </a>
          </li>
          <% } %>
      </ul>
  </navbar>
</section>

<% include ../partials/footer %>