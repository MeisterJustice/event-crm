<% include ../partials/header %>

<section id="event-new" class="mt-5 container">
    <h2 class="text-center">
        share your event to the world!
    </h2>
    <form class="mt-4 shadow-lg" action="/event" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-8 ml-lg-5">
                <div class="ml-2 ml-lg-0">
                    <label for="title" class="d-block mb-0 mt-2"><h4>title</h4></label>
                    <input id="title" type="text" name="title" required class="d-inline">
                    <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="an engaging title that'll get audience excited. Example; best pool party coming up in Lagos">?</span>
                </div>
                <div class="mt-2 ml-2 ml-lg-0">
                    <label for="images" class="d-block mb-0"><h4>images</h4></label>
                    <input class="d-inline" id="images" name="images" type="file" accept='images/*' multiple>
                    <span tabindex="0" class="display-5" role="button" data-toggle="popover" data-trigger="focus" data-content="a miximum of 8 images to be used as event gallery. Note that the first will be used as main image">?</span>
                </div>
                <div class="mt-3">
                    <label for="description d-block"><h4>describe the event</h4></label>
                    <textarea name="description" id="description" cols="30" rows="10"></textarea>
                </div>
                <div class="my-2 ml-2 ml-lg-0">
                    <button class="btn btn-md btn-dark">post</button>
                </div>
            </div>
            <div class="col-lg-3 bg-dark">
                <h4 class="text-center text-white mt-4">more details</h4>
                <div class="mt-4">
                    <div class="mt-3 text-white">
                        <label for="country" class="d-block mb-0 text-white"><h5>country of event</h5></label>
                        <input id="country" type="text" name="country" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what country the event will be holding in">?</span>
                    </div>
                    <div class="text-white">
                        <label for="city" class="d-block mb-0 text-white mt-3"><h5>city of event</h5></label>
                        <input id="city" type="text" name="city" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what city the event will be holding in">?</span>
                    </div>
                    <div class="text-white">
                        <label for="venue" class="d-block mb-0 text-white mt-3"><h5>venue of event</h5></label>
                        <input id="venue" type="text" name="venue" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what venue the event will be holding in">?</span>
                    </div>
                    <div class="text-white">
                        <label for="eventDate" class="d-block mb-0 text-white mt-3"><h5>date of event</h5></label>
                        <input id="eventDate" type="text" name="eventDate" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what's the date of the event">?</span>
                    </div>
                    <div class="text-white pb-4 pb-lg-0">
                        <label for="eventTime" class="d-block mb-0 text-white mt-3"><h5>time of event</h5></label>
                        <input id="eventTime" type="text" name="eventTime" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="event starts when and ends when. Example 4pm to 9pm">?</span>
                    </div>
                    <br>
                    <hr>
                    <h4 class="text-white pb-4 pb-lg-0 text-center">__Sell tickets with us__</h4>
                    <button type="button" style="font-size: 17px;" class="btn btn-info" data-toggle="modal" data-target="#terms">
                        Check terms of service before use (important!)
                    </button> 
                    <hr>
                    <div class="text-white pb-4 pb-lg-0">
                        <label for="regularAmount" class="d-block mb-0 text-white mt-3"><h5>Regular Amount (&#8358;)</h5></label>
                        <input id="regularAmount" type="number" name="regularAmount" class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="price for regulars">?</span>
                    </div>
                    <div class="text-white pb-4 pb-lg-0">
                        <label for="coupleAmount" class="d-block mb-0 text-white mt-3"><h5>Couple Amount (&#8358;)</h5></label>
                        <input id="coupleAmount" type="number" name="coupleAmount" class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="price for couples">?</span>
                    </div>
                    <div class="text-white pb-4 pb-lg-0">
                        <label for="vipAmount" class="d-block mb-0 text-white mt-3"><h5>VIP Amount (&#8358;)</h5></label>
                        <input id="vipAmount" type="number" name="vipAmount" class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="price for couples">?</span>
                    </div>
                    <div class="text-white pb-4 pb-lg-0">
                        <label for="comment" class="d-block mb-0 text-white mt-3"><h5>Comment</h5></label>
                        <textarea id="comment" name="ticketComment" class="d-inline" rows="5" ></textarea>
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="a little comment for your ticket purchasers (required)">?</span>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <!-- TERMS OF SERVICE MODAL -->
    <div class="modal fade" id="terms" tabindex="-1" role="dialog" aria-labelledby="termsTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="termsTitle">Modal title</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              ...
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              
            </div>
          </div>
        </div>
    </div>
</section>

<script src="https://cdn.ckeditor.com/4.12.1/standard/ckeditor.js"></script>
    <script>
        CKEDITOR.replace('description');
</script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="/javascripts/bootstrap.js"></script>
<script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/magnific-popup.js/1.1.0/jquery.magnific-popup.min.js"></script>
<script src="/javascripts/index.js"></script>

</body>

</html>
