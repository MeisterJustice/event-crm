<% include ../../partials/admin-header %>

<section id="event-new" class="mt-5 container">
    <h2 class="text-center">
        share your event to the world!
    </h2>
    <form class="mt-4 shadow-lg" action="/event" method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-lg-8 ml-lg-5">
                <div class="ml-2 ml-lg-0">
                    <label for="title" class="d-block mb-0 mt-2"><h4>title</h4></label>
                    <input id="title" type="text" name="title" required class="d-inline">
                    <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="an engaging title that'll get audience excited. Example; best pool party coming up in Lagos">?</span>
                </div>
                <div class="mt-2 ml-2 ml-lg-0">
                    <label for="images" class="d-block mb-0"><h4>images</h4></label>
                    <input class="d-inline" id="images" name="images" type="file" accept='images/*' multiple>
                    <span tabindex="0" class="display-5" role="button" data-toggle="popover" data-trigger="focus" data-content="a miximum of 8 images to be used as event gallery. Note that the first will be used as main image">?</span>
                </div>
                <div class="mt-3">
                    <label for="description d-block"><h4>describe the event</h4></label>
                    <textarea name="description" id="description" cols="30" rows="10"></textarea>
                </div>
                <div class="my-2 ml-2 ml-lg-0">
                    <button class="btn btn-md btn-dark">post</button>
                </div>
            </div>
            <div class="col-lg-3 bg-dark">
                <h4 class="text-center text-white mt-4">more details</h4>
                <div class="mt-4">
                    <div class="mt-3 text-white">
                        <label for="country" class="d-block mb-0 text-white"><h5>country of event</h5></label>
                        <input id="country" type="text" name="country" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what country the event will be holding in">?</span>
                    </div>
                    <div class="text-white">
                        <label for="city" class="d-block mb-0 text-white mt-3"><h5>city of event</h5></label>
                        <input id="city" type="text" name="city" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what city the event will be holding in">?</span>
                    </div>
                    <div class="text-white">
                        <label for="venue" class="d-block mb-0 text-white mt-3"><h5>venue of event</h5></label>
                        <input id="venue" type="text" name="venue" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what venue the event will be holding in">?</span>
                    </div>
                    <div class="text-white">
                        <label for="eventDate" class="d-block mb-0 text-white mt-3"><h5>date of event</h5></label>
                        <input id="eventDate" type="text" name="eventDate" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="what's the date of the event">?</span>
                    </div>
                    <div class="text-white pb-4 pb-lg-0">
                        <label for="eventTime" class="d-block mb-0 text-white mt-3"><h5>time of event</h5></label>
                        <input id="eventTime" type="text" name="eventTime" required class="d-inline">
                        <span tabindex="0" class="display-5 ml-3" role="button" data-toggle="popover" data-trigger="focus" data-content="event starts when and ends when. Example 4pm to 9pm">?</span>
                    </div>
                </div>
            </div>
        </div>
    </form>
</section>

